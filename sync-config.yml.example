# 仓库同步配置列表
repositories:
  - name: "project-a-sync"  # 示例：同步一个主分支的项目
    gitee:
      # Gitee 仓库完整地址
      repo_url: "https://gitee.com/xxx/project-a.git"
      # 要同步的源分支
      branch: "master"
    github:
      # GitHub 目标仓库名称
      repo_name: "project-a"
      # GitHub 目标分支名称（可选，默认与 Gitee 分支相同）
      branch: "main"
      # 是否为私有仓库
      private: false

  - name: "project-b-sync"  # 示例：同步一个开发分支的私有项目
    gitee:
      repo_url: "https://gitee.com/xxx/project-b.git"
      branch: "develop"
    github:
      repo_name: "project-b-private"
      branch: "develop"
      private: true


  # 可以继续添加更多仓库配置...
  # 复制上面的配置块，修改相应的值即可
  # 注意保持正确的 YAML 缩进 